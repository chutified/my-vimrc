{
    "json.enable": true,
    "json.trace.server": "verbose",
    "json.format.enable": true,

    "yaml.format.enable": true,
    "yaml.format.singleQuote": true,
    "yaml.validate": true,
    "yaml.completion": true,

    "go.enable": true,
    "go.checkForUpdates": "ask",
    "go.disable": {
        "completion": false,
        "diagnostics": false,
        "workspaceFolders": false
    },
    "go.goplsOptions": {
        "completeUnimported": true,
        "completionDocumentation": true,
        "fuzzyMatching": true,
        "hoverKind": "SynopsisDocumentation",
        "linkTarget": "pkg.go.dev",
        "usePlaceholders": false
    },

    "vimlsp.diagnostic.enable": true,

    "jedi.enable": true,
    "jedi.startupMessage": true,

    "sql.lintOnOpen": true,
    "sql.lintOnSave": true,
    "sql.lintOnChange": true,
    "sql.database": "postgresql",

    "html.enable": true,
    "html.filetypes": [
        "html",
        "gohtml"
    ],
    "html.autoClosingTags": true,
    "html.format.enable": true,
    "html.validate.html": true,
    "html.validate.styles": true,
    "html.validate.scripts": true,

    "markdownlint.onOpen": true,
    "markdownlint.onSave": true,
    "markdownlint.onChange": true,
    "markdownlint.config": {
        "default": true
    },

    "css.enable": true,
    "css.validate": true,
    "css.colorDecorators.enable": true,
    "css.completion.completePropertyWithSemicolon": true,
    "css.completion.triggerPropertyValueCompletion": true,
    "scss.completion.completePropertyWithSemicolon": true,
    "scss.completion.triggerPropertyValueCompletion":true,

    "emmet.showExpandedAbbreviation": "inMarkupAndStylesheetFilesOnly",
    "emmet.showAbbreviationSuggestions": true,
    
    "explorer.toggle": true,
    "explorer.focus": true,
    "explorer.position": "left",
    "explorer.width": 36,
    "explorer.keyMappings": {
        "s": "open:split",
        "S": "open:vsplit"
    },
    "explorer.sources": [
        {
            "name": "file",
            "expand": true
        }
    ],
    "explorer.icon.enableNerdfont": true,

    "highlight.colors.enable": true,
    "highlight.document.enable": true,

    "yank.highlight.enable": true,
    "yank.highlight.duration": 800,
    "yank.list.maxsize": 100,
    "yank.enableCompletion": true,

    "pairs.enableCharacters": [
        "(",
        "[",
        "{",
        "<",
        "'",
        "\"",
        "`"
    ],

    "git.command": "git",
    "git.remoteName": "origin",
    "git.enableGutters": true,
    "git.enableGlobalStatus": true
}
